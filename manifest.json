{
    "name": "New Tab Widget",
    "description": "Customise the new tab",
    "version": "0.0.0.2",
    "content_scripts": [{
		"js": [
            "jquery-2.2.0.min.js"
            , "jquery-ui.min.js"
            , "newtab.js"
        ],
		"matches": ["*://*.google.com/_/chrome/newtab*"]
	}],
	"permissions" : [
        "storage"
        , "management"
        , "tabs"
        , "<all_urls>"
        , "contextMenus"
    ],
    "chrome_url_overrides" : {
        "newtab": "newtab.html"
    },
	"background_page" : "background.html",
    "browser_action": {
        "default_icon":"images/heart-icon.png",
		
        /*"default_icon": {
            "19": "images/chrome.png",
            "38": "images/chrome.png" 
        },*/
        "default_title": "Add a new bookmark",
        "default_popup": "popup.html" 
    },
	"background": {
        "scripts": ["jquery-2.2.0.min.js"],
        "persistent": false
    },
	"manifest_version": 2
}
